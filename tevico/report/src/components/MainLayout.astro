---
import { SideNavigation } from "@/components/tevico/side-navigation";

import { type Page } from "@/lib/utils";

interface Props {
  activePage: Page;
}

const { activePage } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <base href=".">
    <meta charset="UTF-8" />
    <meta name="description" content={activePage.description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/png" href="logo.png" />
    <title>{activePage.pageTitle}</title>
  </head>
  <body class="min-h-screen">
    <div
      class="grid min-h-screen w-full md:grid-cols-[220px_1fr] lg:grid-cols-[280px_1fr]"
    >
      <div class="hidden border-r bg-muted/40 md:block">
        <div class="flex h-full max-h-screen flex-col gap-2">
          <div class="flex h-14 items-center border-b px-4 lg:h-[60px] lg:px-6">
            <a href="/" class="flex items-center gap-2 font-semibold">
              <img
              src="/logo.png"
              alt="Tevico Logo"
              class="h-8 w-8 mt-1"
            />
              <span class="">Tevico Community</span>
            </a>
          </div>
          <div class="flex-1">
            <SideNavigation activePage={activePage} client:load />
          </div>
        </div>
      </div>
      <div class="flex flex-col">
        <header
          class="flex h-14 items-center gap-4 border-b bg-muted/40 px-4 lg:h-[60px] lg:px-6"
        >
        </header>
        <main class="flex flex-1 flex-col gap-4 p-4 lg:gap-6 lg:p-6 md:gap-8 md:p-8">
          <div class="flex items-center">
            <h1 class="text-lg font-semibold md:text-2xl">{activePage.pageHeader}</h1>
          </div>
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
